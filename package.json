{
    "name": "wikitext",
    "displayName": "Wikitext",
    "description": "Wikitext is a document written in a wiki markup language. It is a mixture of content, markup, and metadata. The extension mainly supports the Wiki markup text language based on MediaWiki.",
    "publisher": "RoweWilsonFrederiskHolme",
    "version": "1.1.1",
    "icon": ".asset/Wikitext-icon.png",
    "engines": {
        "vscode": "^1.41.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Other"
    ],
    "activationEvents": [
        "onCommand:wikitext.helloWorld"
    ],
    "main": "./dist/extension",
    "contributes": {
        "commands": [
            {
                "command": "wikitext.helloWorld",
                "title": "Hello World"
            }
        ],
        "languages": [
            {
                "id": "wikitext",
                "aliases": [
                    "Wikitext",
                    "wikitext",
                    "WikiText"
                ],
                "extensions": [
                    ".wikitext",
                    ".wt",
                    ".mediawiki",
                    ".mw",
                    ".wiki"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "wikitext",
                "scopeName": "source.wikitext",
                "path": "./syntaxes/wikitext.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "node ./out/test/runTest.js",
        "pretest": "webpack --mode production",
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./",
		"lint": "tslint -p ./"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.39.0",
        "glob": "^7.1.5",
        "mocha": "^6.2.2",
        "ts-loader": "^6.2.1",
        "tslint": "^5.20.0",
        "typescript": "^3.6.4",
        "vscode-test": "^1.2.2",
        "webpack": "^4.41.6",
        "webpack-cli": "^3.3.11"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Frederisk/Wikitext-VSCode-Extension.git"
    }
}
